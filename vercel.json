{
  "version": 2,
  "builds": [
    {
      "src": "app.py",
      "use": "@vercel/python",
      "config": { "maxLambdaSize": "15mb" }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "app.py"
    }
  ],
  "env": {
    "NEON_DB_CONNECTION_STRING": "@neon_db_connection_string",
    "GROQ_API_KEY": "@groq_api_key",
    "RAPID_API_KEY": "@rapid_api_key",
    "HUNTER_API_KEY": "@hunter_api_key",
    "SENDGRID_API_KEY": "@sendgrid_api_key"
  }
}
